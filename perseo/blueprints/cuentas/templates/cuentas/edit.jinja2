{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Editar Cuenta {{ cuenta.id }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Editar cuenta ID ' + cuenta.id | string) %}
        {{ topbar.button_cancel() }}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'cuenta_id': cuenta.id} %}
        {% call f.form_tag('cuentas.edit', fid='cuenta_form', **form_kwargs) %}
            {% call f.form_group(form.banco_nombre, readonly=true) %}{% endcall %}
            {% call f.form_group(form.persona_rfc, readonly=true) %}{% endcall %}
            {% call f.form_group(form.persona_nombre, readonly=true) %}{% endcall %}
            {% call f.form_group(form.num_cuenta) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
