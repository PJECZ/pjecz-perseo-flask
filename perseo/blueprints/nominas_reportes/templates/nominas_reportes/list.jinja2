{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}{{ titulo }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {% if current_user.can_admin('NOMINAS REPORTES') %}
            {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivos', url_for('nominas_reportes.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ topbar.button_list_active('Activos', url_for('nominas_reportes.list_active')) }}{% endif %}
        {% endif %}
        {# if current_user.can_insert('NOMINAS REPORTES') %}
            {{ topbar.button_new('Nuevo Nomina Reporte', url_for('nominas_reportes.new')) }}
        {% endif #}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <table id="nominas_reportes_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Detalle</th>
                    <th>Mensaje</th>
                    <th>Generado XLSX</th>
                </tr>
            </thead>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {{ list.config_datatable() }}
    <script>
        configDataTable['ajax']['url'] = '/nominas_reportes/datatable_json';
        configDataTable['ajax']['data'] = {{ filtros }};
        configDataTable['columns'] = [
            { data: 'detalle' },
            { data: 'mensaje' },
            { data: 'generado' },
        ];
        configDataTable['columnDefs'] = [
            {
                targets: 0, // detalle
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url + '">' + data.descripcion + '</a>';
                }
            },
            {
                targets: 1, // mensaje
                data: null,
                render: function(data, type, row, meta) {
                    return (data.length > 48 ? '<span title="'+ data +'">' + data.substr(0, 48) + 'â€¦</span>' : data);
                }
            },
            {
                targets: 2, // generado
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url + '" target="_blank"><span class="iconify" data-icon="mdi:file-download"></span> Descargar</a>';
                }
            },
        ];
        $('#nominas_reportes_datatable').DataTable(configDataTable);
    </script>
{% endblock %}
