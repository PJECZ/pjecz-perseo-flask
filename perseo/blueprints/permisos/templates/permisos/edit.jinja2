{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Editar Permiso{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Editar Permiso') %}
        {{ topbar.button_cancel() }}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'permiso_id': permiso.id} %}
        {% call f.form_tag('permisos.edit', fid='permiso_form', **form_kwargs) %}
            {% call f.form_group(form.modulo, readonly=true) %}{% endcall %}
            {% call f.form_group(form.rol, readonly=true) %}{% endcall %}
            {% call f.form_group(form.nivel) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
