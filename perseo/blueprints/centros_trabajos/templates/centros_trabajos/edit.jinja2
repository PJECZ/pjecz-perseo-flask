{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Editar Centro de Trabajo {{ centro_trabajo.clave }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Editar C. T.' + centro_trabajo.clave) %}
        {{ topbar.button_cancel() }}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'centro_trabajo_id': centro_trabajo.id} %}
        {% call f.form_tag('centros_trabajos.edit', fid='centro_trabajo_form', **form_kwargs) %}
            {% call f.form_group(form.clave) %}{% endcall %}
            {% call f.form_group(form.descripcion) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
