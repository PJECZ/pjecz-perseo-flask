{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Editar Banco {{ banco.nombre }} {% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Editar Banco ' + banco.nombre) %}
        {{ topbar.button_cancel() }}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'banco_id': banco.id} %}
        {% call f.form_tag('bancos.edit', fid='banco_form', **form_kwargs) %}
            {% call f.form_group(form.nombre) %}{% endcall %}
            {% call f.form_group(form.clave) %}{% endcall %}
            {% call f.form_group(form.clave_dispersion_pensionados) %}{% endcall %}
            {% call f.form_group(form.consecutivo) %}{% endcall %}
            {% call f.form_group(form.consecutivo_generado) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
