{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}{{ titulo }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {% if current_user.can_admin('QUINCENAS') %}
            {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivos', url_for('quincenas.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ topbar.button_list_active('Activos', url_for('quincenas.list_active')) }}{% endif %}
        {% endif %}
        {% if current_user.can_admin('QUINCENAS') %}
            {{ topbar.button('Cerrar Quincenas', url_for('quincenas.close'), 'mdi:stop') }}
        {% endif %}
        {# if current_user.can_insert('QUINCENAS') %}
            {{ topbar.button_new('Nueva Quincena', url_for('quincenas.new')) }}
        {% endif #}
    {% endcall %}
{% endblock %}

{% block content %}
    <!-- Acciones -->
    <div class="row">
        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm">
                <div class="card-body">
                    <h1 class="card-title"><span class="iconify" data-icon="mdi:cash-fast"></span> NÃ³minas</h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>Primero</li>
                        <li>Segundo</li>
                        <li>Tercero</li>
                    </ul>
                    <button type="button" class="w-100 btn btn-lg btn-outline-primary">Generar XLSX</button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm">
                <div class="card-body">
                    <h1 class="card-title"><span class="iconify" data-icon="mdi:cart"></span> Monederos</h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>Primero</li>
                        <li>Segundo</li>
                        <li>Tercero</li>
                    </ul>
                    <button type="button" class="w-100 btn btn-lg btn-outline-primary">Generar XLSX</button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm">
                <div class="card-body">
                    <h1 class="card-title"><span class="iconify" data-icon="mdi:human-cane"></span> Pensiones</h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>Primero</li>
                        <li>Segundo</li>
                        <li>Tercero</li>
                    </ul>
                    <button type="button" class="w-100 btn btn-lg btn-outline-primary">Generar XLSX</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Datatable -->
    {% call list.card() %}
        <table id="quincenas_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Quincena</th>
                    <th>Estado</th>
                </tr>
            </thead>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {{ list.config_datatable() }}
    <script>
        configDataTable['ajax']['url'] = '/quincenas/datatable_json';
        configDataTable['ajax']['data'] = {{ filtros }};
        configDataTable['columns'] = [
            { data: 'detalle' },
            { data: 'estado' }
        ];
        configDataTable['columnDefs'] = [
            {
                targets: 0, // detalle
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url + '">' + data.quincena + '</a>';
                }
            }
        ];
        $('#quincenas_datatable').DataTable(configDataTable);
    </script>
{% endblock %}
