{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}{{ titulo }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {% if current_user.can_admin('CONCEPTOS PRODUCTOS') %}
            {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivos', url_for('conceptos_productos.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ topbar.button_list_active('Activos', url_for('conceptos_productos.list_active')) }}{% endif %}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <table id="conceptos_productos_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Concepto</th>
                    <th>Producto</th>
                </tr>
            </thead>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    <script src="{{ url_for('static', filename='js/datatables-constructor.js') }}"></script>
    <script src="{{ url_for('static', filename='js/datatables-filtros.js') }}"></script>
    <script>
        // DataTable ConceptosProductos
        const constructorDataTable = new ConfigDataTable( '{{ csrf_token() }}' );
        let configDTConceptosProductos = constructorDataTable.config();
        configDTConceptosProductos['ajax']['url'] = '{{ url_for('conceptos_productos.datatable_json') }}';
        configDTConceptosProductos['ajax']['data'] = {{ filtros }};
        configDTConceptosProductos['columns'] = [
            { data: 'detalle' },
            { data: 'concepto' },
            { data: 'producto' }
        ];
        configDTConceptosProductos['columnDefs'] = [
            {
                targets: 0, // detalle
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url + '">' + data.id + '</a>';
                }
            },
            {
                targets: 1, // concepto
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url + '">' + data.clave + '</a>';
                }
            },
            {
                targets: 2, // producto
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url + '">' + data.clave + '</a>';
                }
            },
        ];
        // Filtros ConceptosProductos
        const filtrosConceptosProductos = new FiltrosDataTable('#conceptos_productos_datatable', configDTConceptosProductos);
        filtrosConceptosProductos.precargar();
    </script>
{% endblock %}
