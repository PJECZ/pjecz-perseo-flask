{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}{{ titulo }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {% if current_user.can_admin('PRODUCTOS') %}
            {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivos', url_for('productos.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ topbar.button_list_active('Activos', url_for('productos.list_active')) }}{% endif %}
        {% endif %}
        {% if current_user.can_insert('PRODUCTOS') %}
            {{ topbar.button_new('Nuevo Producto', url_for('productos.new')) }}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <table id="productos_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Clave</th>
                    <th>Descripci√≥n</th>
                </tr>
            </thead>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    <script src="{{ url_for('static', filename='js/datatables-constructor.js') }}"></script>
    <script src="{{ url_for('static', filename='js/datatables-filtros.js') }}"></script>
    <script>
        // DataTable Produtos
        const constructorDataTable = new ConfigDataTable( '{{ csrf_token() }}' );
        let configDTProductos = constructorDataTable.config();
        configDTProductos['ajax']['url'] = '{{ url_for('productos.datatable_json') }}';
        configDTProductos['ajax']['data'] = {{ filtros }};
        configDTProductos['columns'] = [
            { data: 'detalle' },
            { data: 'descripcion' }
        ];
        configDTProductos['columnDefs'] = [
            {
                targets: 0, // detalle
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url + '">' + data.clave + '</a>';
                }
            }
        ];
        // Filtros Produtos
        const filtrosProductos = new FiltrosDataTable('#productos_datatable', configDTProductos);
        filtrosProductos.precargar();
    </script>
{% endblock %}
