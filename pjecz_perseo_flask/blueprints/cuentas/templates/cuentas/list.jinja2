{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/modals.jinja2' as modals %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}{{ titulo }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {% if current_user.can_admin('CUENTAS') %}
            {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivos', url_for('cuentas.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ topbar.button_list_active('Activos', url_for('cuentas.list_active')) }}{% endif %}
        {% endif %}
        {% if current_user.can_view('CUENTAS') %}
            {{ modals.button_modal('Exportar a XLSX', url_for('cuentas.exportar_xlsx'), 'ExportXLSX', 'mdi mdi-download', "Â¿Quiere exportar las Cuentas activas como un archivo XLSX?") }}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <!-- Filtros Cuentas -->
        <div class="row">
            <div class="col">
                <form class="row g-1 mb-3" id="filtradorCuentasForm" onsubmit="filtrosCuentas.buscar(); return false;">
                    <div class="col-2">
                        <div class="form-floating">
                            <input id="filtroPersonaRFC" type="text" class="form-control" aria-label="RFC" style="text-transform: uppercase;">
                            <label for="filtroPersonaRFC">RFC</label>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-floating">
                            <input id="filtroPersonaNombres" type="text" class="form-control" aria-label="Nombres" style="text-transform: uppercase;">
                            <label for="filtroPersonaNombres">Nombres</label>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-floating">
                            <input id="filtroPersonaApellidoPrimero" type="text" class="form-control" aria-label="Apellido primero" style="text-transform: uppercase;">
                            <label for="filtroPersonaApellidoPrimero">Primer apellido</label>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-floating">
                            <input id="filtroPersonaApellidoSegundo" type="text" class="form-control" aria-label="Apellido segundo" style="text-transform: uppercase;">
                            <label for="filtroPersonaApellidoSegundo">Segundo apellido</label>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-floating">
                            <input id="filtroNumCuenta" type="text" class="form-control" aria-label="No. Cuenta" style="text-transform: uppercase;">
                            <label for="filtroNumCuenta">No. de Cuenta</label>
                        </div>
                    </div>
                    <div class="col-2 text-end">
                        <button title="Buscar" class="btn btn-primary btn-lg" onclick="filtrosCuentas.buscar(); return false;" id="button-buscar"><span class="mdi mdi-magnify"></span></button>
                        <button title="Limpiar" class="btn btn-warning btn-lg" type="reset" onclick="filtrosCuentas.limpiar();" id="button-limpiar"><span class="mdi mdi-broom"></span></button>
                    </div>
                </form>
            </div>
        </div>
        <!-- DataTable Cuentas -->
        <table id="cuentas_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>RFC</th>
                    <th>Nombre completo</th>
                    <th>Banco</th>
                    <th>No. de cuenta</th>
                </tr>
            </thead>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {{ modals.custom_javascript('Exportar a XLSX', '', 'ExportXLSX') }}
    <script src="/static/js/datatables-constructor.js"></script>
    <script src="/static/js/datatables-filtros.js"></script>
    <script>
        // DataTable Cuentas
        const constructorDataTable = new ConfigDataTable( '{{ csrf_token() }}' );
        let configDTCuentas = constructorDataTable.config();
        configDTCuentas['ajax']['url'] = '/cuentas/datatable_json';
        configDTCuentas['ajax']['data'] = {{ filtros }};
        configDTCuentas['columns'] = [
            { data: 'detalle' },
            { data: 'persona_rfc' },
            { data: 'persona_nombre_completo' },
            { data: 'banco_nombre' },
            { data: 'num_cuenta' }
        ];
        configDTCuentas['columnDefs'] = [
            {
                targets: 0, // detalle
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url + '">' + data.id + '</a>';
                }
            }
        ];
        // Filtros Cuentas
        const filtrosCuentas = new FiltrosDataTable('#cuentas_datatable', configDTCuentas);
        filtrosCuentas.agregarInput('filtroPersonaRFC', 'persona_rfc');
        filtrosCuentas.agregarInput('filtroPersonaNombres', 'persona_nombres');
        filtrosCuentas.agregarInput('filtroPersonaApellidoPrimero', 'persona_apellido_primero');
        filtrosCuentas.agregarInput('filtroPersonaApellidoSegundo', 'persona_apellido_segundo');
        filtrosCuentas.agregarInput('filtroNumCuenta', 'num_cuenta');
        filtrosCuentas.precargar();
    </script>
{% endblock %}
