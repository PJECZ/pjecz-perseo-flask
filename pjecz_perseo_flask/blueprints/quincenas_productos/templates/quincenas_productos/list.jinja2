{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}{{ titulo }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {% if current_user.can_view('QUINCENAS') %}
            {{ topbar.button('Quincenas', url_for('quincenas.list_active'), 'mdi mdi-calendar') }}
        {% endif %}
        {# if current_user.can_admin('QUINCENAS PRODUCTOS') %}
            {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivos', url_for('quincenas_productos.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ topbar.button_list_active('Activos', url_for('quincenas_productos.list_active')) }}{% endif %}
        {% endif #}
        {# if current_user.can_insert('QUINCENAS PRODUCTOS') %}
            {{ topbar.button_new('Nuevo Quincena Producto', url_for('quincenas_productos.new')) }}
        {% endif #}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <table id="quincenas_productos_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Quincena</th>
                    <th>Fuente</th>
                    <th>Mensajes</th>
                    <th>Archivo</th>
                </tr>
            </thead>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    <script src="{{ url_for('static', filename='js/datatables-constructor.js') }}"></script>
    <script src="{{ url_for('static', filename='js/datatables-filtros.js') }}"></script>
    <script>
        // DataTable QuincenasProductos
        const constructorDataTable = new ConfigDataTable( '{{ csrf_token() }}' );
        let configDTQuincenasProductos = constructorDataTable.config();
        configDTQuincenasProductos['ajax']['url'] = '{{ url_for('quincenas_productos.datatable_json') }}';
        configDTQuincenasProductos['ajax']['data'] = {{ filtros }};
        configDTQuincenasProductos['columns'] = [
            { data: 'detalle' },
            { data: 'quincena_clave' },
            { data: 'fuente' },
            { data: 'mensajes' },
            { data: 'archivo' }
        ];
        configDTQuincenasProductos['columnDefs'] = [
            {
                targets: 0, // detalle
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url + '">' + data.id + '</a>';
                }
            },
            {
                targets: 4, // archivo
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url + '">' + data.nombre_archivo + '</a>';
                }
            }
        ];
        // Filtros QuincenasProductos
        const filtrosQuincenasProductos = new FiltrosDataTable('#quincenas_productos_datatable', configDTQuincenasProductos);
        filtrosQuincenasProductos.agregarInput('filtroClave', 'clave');
        filtrosQuincenasProductos.agregarInput('filtroDescripcion', 'descripcion');
        filtrosQuincenasProductos.precargar();
    </script>
{% endblock %}
